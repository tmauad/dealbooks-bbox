<%= render partial: 'shared/header' %>

<section class="form-create">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <a href="/people" class="btn-back"><img src="/img/seta-esq-cinza.svg" alt=""> <%= t('people.form.back') %></a>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <h1 class="title"><%= t('people.form.new') %></h1>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-5">
		<%= form_for @person do |f| %>
		    <%= render partial: 'form', locals: { f: f } %>
                <% end %>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-7">
                <div class="text-featured">
                    <h1><%= t('people.form.featured_title') %></h1>
                    <p><%= t('people.form.featured_subtitle') %></p>
                    <img src="/img/img-featured-people.png" class="img-featured-people" alt="">
                </div>
            </div>
        </div>
    </div>
</section>

<%= render partial: 'shared/footer' %>
